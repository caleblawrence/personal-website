{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "utils/get-blog-posts.js",
    "components/suspense-example/Num.js",
    "components/suspense-example/Person.js",
    "components/suspense-example/PersonApi.js",
    "components/suspense-example/Suspense.js",
    "components/syntax-highlight.js", "posts/get-blog-posts.js"
  ],
  "typeRoots": [
    "./src/types"
  ]
}
